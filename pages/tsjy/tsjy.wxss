.page
{
	width:100%;
    font-family: MicrosoftYaHei;
    font-size:15px;
    color:#323232;
    margin: 0;
    background-color: rgba(255,255,255,1);
}

.item-text {
	position:absolute;
	top: 0;
	height:92vh;
	width:100%;
	overflow:auto;
}

.item-text-sqxx {
	padding:0px 20px 0px 20px;
	margin:5px;
	background:rgba(255,255,255,1);
	border-radius: 5px;
}

.item-text-detail {
	height:50px;
	line-height:50px;
}

.item-text-detail2 {
	height:50px;
	line-height:50px;
	border-top: 1px solid #D9D9D9;
}

.item-text-detail-l1 {
	float:left;
	width:30%; 
	font-size:15px;
}

.item-text-detail-l2 {
	float:left;
	width:70%; 
	font-size:12px;
	color:#646464;
	text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
}

.item-text-detail-l3 {
	float:left;
	width:60%; 
	font-size:12px;
	color:#646464;
	text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
}

.item-text-detail-l4 {
	display: flex;
	width:10%; 
}

.item-btn {
	position:fixed;
	bottom: 0;
	height:50px;
	width:100%;
	background:rgba(255,255,255,1);
	border-top:solid 1px #B3B3B3;
}

.item-btn-tsjy {
	float:left;
	width:100%;
	line-height:50px;
	text-align:center;
	color:#2DABE5;
}

.re-center {
  background-color: #FFFFFF;
  height:92vh;
  overflow: hidden;
}

.nor-img {
   text-align:center; 
   padding-top:40%;
}

.nor-text {
   position:relative;
   top:5%;
   text-align:center;
   font-size:20px;
   color:#CCCCCC;
}