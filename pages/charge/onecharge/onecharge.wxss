page {
  background-color: #F7F7F7;
  overflow-x:true;
}

.page {
  font-family: Microsoft YaHei;
  font-size: 15px;
  font-weight:Regular;
  flex: 1;
}

.item{
  margin-top:10px;
  margin-left:20px;
  display:flex;
}

.item-top{
  margin-top:20px;
}

.item-3{
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  width:75%;
}

.item-2{
  color:#646464;
  font-weight:Bold;
}

.item-bo{
  margin-bottom:20px;
}

.item-dev-mar{
   margin:20px;
   border-radius:10px;
   box-shadow:2px 0px 10px rgba(246,188,130,0.2);
}

.item-dev-detail{
  background:linear-gradient(0deg,rgba(249,221,157,1),rgba(246,188,130,1));
}

.item-dev-detail-kx{
  background:linear-gradient(0deg,rgba(127,215,255,1),rgba(51,153,255,1));
}

.item-dev-detail-lx{
  background:linear-gradient(0deg,rgba(204,204,204,1),rgba(179,179,179,1));
}

.dev-flex{
  margin-left:25px;
  display:flex;
  height:55px;
  align-items:center;  
}

.dev-image{
  justify-content:center;
  text-align:center;
}

.charge-image{
  width:35px;
  height:35px;
  display: inline-block;
}

.down{
  text-align:center;
}

.down-image{
  width:10px;
  height:9px;
}

.dev-name{
  margin-left:15px;
  color:rgba(255,255,255,1);
  font-size:17px;
  line-height: 55px;
}

