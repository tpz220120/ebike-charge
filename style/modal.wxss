/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 10%;
  z-index: 1001;
  background:rgba(255,255,255,1);
  border-radius: 10rpx;
  padding-bottom:30rpx;
}
 
.drawer_title{
  padding:15px;
  font-size:30rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  color:rgba(51,51,51,1);
  text-align: center;
}
.title_1{
  width:39rpx;
  height:6rpx;
  background:linear-gradient(94deg,rgba(16,142,233,1),rgba(92,245,255,1));
  opacity:0.5;
  border-radius:3rpx;
}

.title_text{
  margin:0 15rpx;
}

.modal_sel{
  text-align: center;
  margin-bottom:40rpx;
  font-size:24rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.drawer_content{
    margin: 18rpx 15%;
    height:120rpx;
    font-size:28rpx;
    text-align:center;
    font-family:Adobe Heiti Std R;
    font-weight:normal;
    color:rgba(255,255,255,1);
    padding:27rpx 50rpx;
}

.modal_text{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
}
